{ "data":
  { "$schema": "http://json-schema.org/draft-04/schema#"
  , "id": "/service/_/Users/schema"
  , "type": "object"
  , "title": "User"
  , "titleField": "name"
  , "description": "Users of the system."
  , "properties":
    { "uuid":
      { "type": "string"
      , "minLength": 32
      , "maxLength": 32
      , "pattern": "^[a-fA-F0-9]{32}$"
      , "description": "User instance identity key."
      }
    , "username":
      { "description": "Unique identifier for the user acconut"
      , "type": "string"
      , "format": "email"
      , "pattern": "^\\S+@\\S+$"
      , "minLength": 4
      , "maxLength": 254
      , "uniqueItems": true
      }
    , "password":
      { "title": "Password"
      , "description": "Password is encrypted after save."
      , "type": "string"
      , "minLength": 8
      , "maxLength": 255
      }
    , "first_name":
      { "title": "First name"
      , "description": "First name of the user"
      , "type": "string"
      }
    , "middle_names":
      { "title": "Middle name(s)"
      , "description": "Middle names of the user, multiple middle names supported"
      , "type": "array"
      , "items": { "type": "string" }
      }
    , "last_name":
      { "title": "Last name"
      , "description": "Last name of the user"
      , "type": "string"
      }
    , "birthday":
      { "title": "Birthday"
      , "description": "Date, or possibly time, of the birth of the user."
      , "type": "string"
      , "format": "date-time"
      }
    , "groups":
      { "title": "User Groups"
      , "type": "array"
      , "items":
        { "type": "string"
        , "minLength": 2
        , "maxLength": 255
        }
      , "uniqueItems": true
      , "default": []
      }
    , "forms":
      { "title": "User Forms"
      , "description": "User accessible forms UUID"
      , "type": "array"
      , "items":
        { "type": "string"
        , "minLength": 32
        , "maxLength": 32
        , "pattern": "^[a-fA-F0-9]{32}$"
        }
      , "uniqueItmes": true
      }
    }
  , "required": [ "username" ]
  }
, "form":
  [ { "type": "section"
    , "htmlClass": "row"
    , "items":
      [ { "type": "section"
        , "htmlClass": "col-md-5 col-lg-4"
        , "items":
          [ { "key": "username"
            , "description": "Email address to uniquely identifies the user."
            }
          , "password"
          ]
        }
      , { "type": "section"
        , "htmlClass": "col-md-7 col-lg-8"
        , "items":
          [ { "key": "groups"
            , "items":
              [ { "key": "groups[]"
                , "title": " "
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
