{
  "environment": "development",

  "bootstrap": {
    "requires": [
      ".private/scripts/vendor/autoload.php"
    ]
  },

  "http": {
    "response": {
      "bufferSize": 1024
    }
  },

  "database": {
    "driver": "mysql",
    "host": "127.0.0.1",
    "schema": "php-node",
    "user": "root"
  },

  "i18n": {
    "localeDefault": "en_US"
  },

  "maintenance": {
    "enable": false,
    "template_path": "/assets/templates/maintenance.html",
    "whitelist": []
  }
}
