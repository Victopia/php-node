{
  "environment": "development",

  "paths": {
    "requires": [
      ".private/scripts/vendor/autoload.php"
    ],
    "autoload": {
      "services": ".private/services",
      "*": ".private/scripts"
    },
    "scss": {
      "src": ".private/src/scss",
      "dst": "assets/css"
    },
    "jsmin": {
      "src": ".private/src/javascripts",
      "dst": "assets/js"
    },
    "cssmin": {
      "src": "assets/css",
      "dst": "assets/css"
    }
  },

  "database": {
    "driver": "mysql",
    "host": "127.0.0.1",
    "schema": "php-node",
    "user": "root"
  },

  "i18n": {
    "localeDefault": "en_US"
  },

  "maintenance": {
    "enable": false,
    "templatePath": "/assets/templates/maintenance.html",
    "whitelist": []
  }
}
