{
  "environment": "development",

  "paths": {
    "requires": [
      ".private/scripts/vendor/autoload.php"
    ],
    "autoload": {
      "services": ".private/services",
      "*": ".private/scripts"
    }
  },

  "locale": {
    "timezone": "Asia/Hong_Kong"
  },

  "database": {
    "default": {
      "driver": "mysql",
      "user": "root",
      "attributes": {
        "host": "mariadb",
        "port": 3306,
        "dbname": "php-node"
      },
      "options": {
        "MYSQL_ATTR_USE_BUFFERED_QUERY": true,
        "MYSQL_ATTR_INIT_COMMAND": "SET NAMES utf8;"
      }
    }
  }
}
