    // Physical file handling
    {
      "class": "FileResolver",
      "options": {
        "directoryIndex": "Home index",
        "output": {
          "buffer": {
            "enable": false,
            "size": 1024
          }
        },
        // note; This usually in sync with RewriteBase in .htaccess
        "prefix": "/"
      }
    },
    // HTTP error pages in HTML or JSON
    {
      "class": "StatusDocumentResolver",
      "options": {
        "prefix": ".private/templates/errordocs"
      }
    },
    // Logging
    { "class": "LogResolver" }
  ]
}
